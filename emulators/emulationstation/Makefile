CXXFLAGS +=	-std=c++11 -Wno-inconsistent-missing-override

BUILD_DEPENDS =		math/eigen3
LIB_DEPENDS =		devel/boost \
			devel/sdl2 \
			graphics/freeimage \
			net/curl

